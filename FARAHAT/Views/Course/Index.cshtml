@model IEnumerable<FARAHAT.Models.Course>

@{
    ViewBag.Title = "Courses";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
    SelectList asd = new SelectList(ViewBag.Category, "ID", "Name");

}
<div id="layoutSidenav_content">
    <div>
        <h2>All Courses</h2>
        @using (Html.BeginForm("searchByCategory", "Course", FormMethod.Post))
        {
            @Html.Label("Search by Category")
            <input type="text" name="name" />
            <input type="submit" name="submit" />
        }


        </div>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>

         
            <th>
                @Html.DisplayNameFor(model => model.Creation_Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TrainerName)
            </th>
            <th>
                Trainees
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image_ID)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>

        
        <td>
            @Html.DisplayFor(modelItem => item.Creation_Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CategoryName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TrainerName)
        </td>
        <td>
            @Html.ActionLink("Trainees","Index", "CourseTrainee", new {id=item.ID},null)
        </td>
        <td>
            @*مش راضيه تتعرض مش عارف ليه*@
            <img src="~/Content/upload/courses/@item.Image_ID" style="width:50px;height:50px" />
            @*@Html.DisplayFor(modelItem => item.Image_ID)*@
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
            @Html.ActionLink("content", "Details", new { id = item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.ID })
        </td>
    </tr>
        }

    </table>
</div>